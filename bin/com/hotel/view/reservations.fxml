<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.hotel.controller.ReservationController"
            style="-fx-background-image: url('dashboard-bg.png'); -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;">
    
    <!-- Left Sidebar Navigation -->
    <left>
        <VBox style="-fx-background-color: #236023; -fx-min-width: 250px; -fx-max-width: 250px;">
            <VBox style="-fx-background-color: #344E41D4; -fx-padding: 20;">
                <Label text="Hotel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Management" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>
            
            <VBox spacing="2">
                <padding>
                    <Insets top="20"/>
                </padding>
                <Button text="ðŸ“Š Dashboard" onAction="#goToDashboard" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ  Home" onAction="#goToHome" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ‘¥ Guests" onAction="#goToGuests" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ  Rooms" onAction="#goToRooms" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ“… Reservations" onAction="#goToReservations" maxWidth="Infinity"
                        style="-fx-background-color: #FFEDD8; -fx-text-fill: #588157; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT; -fx-font-weight: bold;"/>
                <Button text="ðŸ’° Payments" onAction="#goToPayments" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ›Žï¸ Services" onAction="#goToServices" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #F3EDDF; -fx-background: #F3EDDF;">
            <VBox spacing="25" style="-fx-padding: 30;">
                
                <!-- Header Section -->
                <VBox spacing="8">
                    <Label text="Reservation Management" style="-fx-text-fill: #0f172a; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Manage hotel guest bookings and stay schedules" style="-fx-text-fill: #64748b; -fx-font-size: 14px; "/>
                </VBox>

                <!-- Search and Filter Section -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Search reservations..." prefWidth="350" onKeyReleased="#searchReservations" style="-fx-background-color: white; -fx-background-radius: 8px;"/>
                    <Button text="Search" onAction="#searchReservations" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8px;"/>
                    <Button text="Clear" onAction="#clearSearch" style="-fx-background-color: white; -fx-text-fill: #0f172a; -fx-padding: 8 20; -fx-background-radius: 8px; -fx-border-color: #e2e8f0;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="statusFilter" promptText="Filter by Status" prefWidth="150" onAction="#refreshReservations"/>
                    <Button text="+ New Reservation" onAction="#showAddReservationForm" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8px; -fx-font-weight: bold;"/>
                    <Button text="ðŸ”„ Refresh" onAction="#refreshReservations" style="-fx-background-color: white; -fx-text-fill: #0f172a; -fx-padding: 8 20; -fx-background-radius: 8px; -fx-border-color: #e2e8f0;"/>
                </HBox>

                <!-- Reservations Table -->
                <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                    <Label text="Bookings Overview" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="reservationsTable" VBox.vgrow="ALWAYS" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="guestNameColumn" text="Guest Name" prefWidth="180"/>
                            <TableColumn fx:id="roomNumberColumn" text="Room" prefWidth="100"/>
                            <TableColumn fx:id="checkInColumn" text="Check-In" prefWidth="120"/>
                            <TableColumn fx:id="checkOutColumn" text="Check-Out" prefWidth="120"/>
                            <TableColumn fx:id="nightsColumn" text="Nights" prefWidth="80"/>
                            <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="120"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="130"/>
                            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200"/>
                        </columns>
                    </TableView>
                    
                    <HBox spacing="10">
                        <Button text="Edit Selected" onAction="#editReservation" style="-fx-background-color: #f59e0b; -fx-text-fill: white;"/>
                        <Button text="Check In" onAction="#checkInReservation" style="-fx-background-color: #3b82f6; -fx-text-fill: white;"/>
                        <Button text="Check Out" onAction="#checkOutReservation" style="-fx-background-color: #3b82f6; -fx-text-fill: white;"/>
                        <Button text="Cancel Reservation" onAction="#cancelReservation" style="-fx-background-color: #ef4444; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <!-- Reservation Form (Hidden by default) -->
                <VBox fx:id="reservationFormPanel" spacing="20" managed="false" visible="false" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="New Booking Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="25" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="180"/>
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <Label text="Guest:" styleClass="form-label"/>
                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <ComboBox fx:id="guestComboBox" promptText="Select guest" />
                            <Button text="New Guest" minWidth="100" onAction="#goToGuests" style="-fx-background-color: transparent; -fx-text-fill: #3b82f6; -fx-border-color: #3b82f6; -fx-border-radius: 4px;"/>
                        </HBox>
                        
                        <Label text="Room:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <ComboBox fx:id="roomComboBox" promptText="Select available room" onAction="#calculateTotal" />
                            <Label fx:id="roomPriceLabel" text="0.00/night" minWidth="100" style="-fx-font-weight: bold;"/>
                        </HBox>
                        
                        <Label text="Check-In Date:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <DatePicker fx:id="checkInDatePicker" onAction="#calculateTotal" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Check-Out Date:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <DatePicker fx:id="checkOutDatePicker" onAction="#calculateTotal" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Status:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
 
                        <Label text="Total Price:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <Label fx:id="totalPriceLabel" text="0.00" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                            <Label text="(" style="-fx-text-fill: #64748b;"/>
                            <Label fx:id="numberOfNightsLabel" text="0" style="-fx-text-fill: #64748b;"/>
                            <Label text=" nights)" style="-fx-text-fill: #64748b;"/>
                        </HBox>
                        
                        <Label text="Notes:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <TextArea fx:id="notesArea" prefHeight="100" promptText="Additional notes..." GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    </GridPane>
                    
                    <Label fx:id="conflictWarningLabel" text="Warning: Selected room is already booked for these dates!" visible="false" style="-fx-text-fill: #ef4444; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="12" alignment="CENTER_RIGHT">
                        <Button text="Cancel" onAction="#cancelReservationForm" style="-fx-background-color: white; -fx-border-color: #e2e8f0;"/>
                        <Button text="Confirm Booking" onAction="#saveReservation" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
