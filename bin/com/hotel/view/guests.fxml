<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.hotel.controller.GuestController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="nav-panel" BorderPane.alignment="CENTER">
            <padding><Insets bottom="15" left="20" right="20" top="15"/></padding>
            <Label text="Hotel Management System" styleClass="header-label" textFill="white"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Guests" styleClass="nav-button" onAction="#goToGuests"/>
            <Button text="Rooms" styleClass="nav-button" onAction="#goToRooms"/>
            <Button text="Reservations" styleClass="nav-button" onAction="#goToReservations"/>
            <Button text="Payments" styleClass="nav-button" onAction="#goToPayments"/>
            <Button text="Services" styleClass="nav-button" onAction="#goToServices"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" styleClass="content-panel">
            <padding><Insets bottom="30" left="30" right="30" top="30"/></padding>

            <Label text="Guest Management" styleClass="header-label"/>

            <!-- Toolbar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search guests..." prefWidth="300"/>
                <Button text="Search" styleClass="button" onAction="#searchGuests"/>
                <Button text="Clear" styleClass="button" onAction="#clearSearch"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Add Guest" styleClass="primary-button" onAction="#showAddGuestForm"/>
                <Button text="Edit" styleClass="button" onAction="#editGuest"/>
                <Button text="Delete" styleClass="danger-button" onAction="#deleteGuest"/>
                <Button text="Refresh" styleClass="button" onAction="#refreshGuests"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="guestsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="120"/>
                    <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="120"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150"/>
                    <TableColumn fx:id="idNumberColumn" text="ID Number" prefWidth="120"/>
                    <TableColumn fx:id="addressColumn" text="Address" prefWidth="200"/>
                </columns>
            </TableView>

            <!-- Form (hidden by default) -->
            <VBox fx:id="guestFormPanel" spacing="15" styleClass="form-grid" managed="false" visible="false">
                <Label text="Guest Information" styleClass="sub-header-label"/>
                <GridPane hgap="15" vgap="15">
                    <Label text="First Name:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Last Name:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Email:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Phone:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="ID Number:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextField fx:id="idNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Address:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <TextArea fx:id="addressArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
                
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Save" styleClass="primary-button" onAction="#saveGuest"/>
                    <Button text="Cancel" styleClass="button" onAction="#cancelGuestForm"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
