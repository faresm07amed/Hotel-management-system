                        <Label text="Available Rooms" style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-weight: 500;"/>
                        <Label fx:id="availableRoomsLabel" text="0" style="-fx-text-fill: #10b981; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                        <Label text="ðŸ " style="-fx-font-size: 24px;"/>
                    </VBox>

                    <!-- Active Reservations Card -->
                    <VBox spacing="12" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-border-color: #f59e0b; -fx-border-width: 0 0 0 4;">
                        <Label text="Active Reservations" style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-weight: 500;"/>
                        <Label fx:id="activeReservationsLabel" text="0" style="-fx-text-fill: #f59e0b; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                        <Label text="ðŸ“…" style="-fx-font-size: 24px;"/>
                    </VBox>

                    <!-- Total Revenue Card -->
                    <VBox spacing="12" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-border-color: #8b5cf6; -fx-border-width: 0 0 0 4;">
                        <Label text="Total Revenue" style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-weight: 500;"/>
                        <Label fx:id="totalRevenueLabel" text="0.00" style="-fx-text-fill: #8b5cf6; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                        <Label text="ðŸ’µ" style="-fx-font-size: 24px;"/>
                    </VBox>
                </HBox>

                <!-- Quick Actions Section -->
                <VBox spacing="15">
                    <Label text="Quick Actions" style="-fx-text-fill: #0f172a; -fx-font-size: 18px; -fx-font-weight: 600;"/>
                    
                    <HBox spacing="12">
                        <Button text="+ Add Guest" onAction="#goToGuests"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8px; -fx-font-size: 14px; -fx-font-weight: 600;"/>
                        <Button text="+ Add Room" onAction="#goToRooms"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8px; -fx-font-size: 14px; -fx-font-weight: 600;"/>
                        <Button text="+ New Reservation" onAction="#goToReservations"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 8px; -fx-font-size: 14px; -fx-font-weight: 600;"/>
