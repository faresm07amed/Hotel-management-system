                <Button text="ðŸ’° Payments" onAction="#goToPayments" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ›Žï¸ Services" onAction="#goToServices" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #F3EDDF; -fx-background: #F3EDDF; -fx-border-color: transparent;">
            <VBox spacing="30" style="-fx-padding: 30;">
                
                <!-- Page Header -->
                <VBox spacing="8">
                    <Label text="Dashboard" style="-fx-text-fill: #0f172a; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Welcome to your Hotel Management System" style="-fx-text-fill: #64748b; -fx-font-size: 14px; "/>
                </VBox>

                <!-- Statistics Cards Row -->
                <HBox spacing="20">
                    <!-- Total Guests Card -->
                    <VBox spacing="12" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-border-color: #3b82f6; -fx-border-width: 0 0 0 4;">
                        <Label text="Total Guests" style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-weight: 500;"/>
                        <Label fx:id="totalGuestsLabel" text="0" style="-fx-text-fill: #3b82f6; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                        <Label text="ðŸ‘¥" style="-fx-font-size: 24px;"/>
                    </VBox>

                    <!-- Available Rooms Card -->
                    <VBox spacing="12" HBox.hgrow="ALWAYS"
