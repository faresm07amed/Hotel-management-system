                                style="-fx-background-color: white; -fx-text-fill: #0f172a; -fx-padding: 10 20; -fx-background-radius: 8px; -fx-border-color: #e2e8f0; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-font-size: 14px;"/>
                        <Button text="ðŸ”„ Refresh Dashboard" onAction="#refreshDashboard"
                                style="-fx-background-color: white; -fx-text-fill: #0f172a; -fx-padding: 10 20; -fx-background-radius: 8px; -fx-border-color: #e2e8f0; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-font-size: 14px;"/>
                    </HBox>
                </VBox>

                <!-- System Status Section -->
                <VBox spacing="15">
                    <Label text="System Status" style="-fx-text-fill: #0f172a; -fx-font-size: 18px; -fx-font-weight: 600;"/>
                    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <Label text="âœ… All systems operational" style="-fx-text-fill: #10b981;"/>
                        <Label text="Database: Waiting for MySQL connection" style="-fx-text-fill: #94a3b8;"/>
