<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.hotel.controller.PaymentController"
            style="-fx-background-image: url('dashboard-bg.png'); -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;">
    
    <!-- Left Sidebar Navigation -->
    <left>
        <VBox style="-fx-background-color: #236023; -fx-min-width: 250px; -fx-max-width: 250px;">
            <VBox style="-fx-background-color: #344E41D4; -fx-padding: 20;">
                <Label text="Hotel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Management" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>
            
            <VBox spacing="2">
                <padding>
                    <Insets top="20"/>
                </padding>
                <Button text="ðŸ“Š Dashboard" onAction="#goToDashboard" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ  Home" onAction="#goToHome" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ‘¥ Guests" onAction="#goToGuests" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ  Rooms" onAction="#goToRooms" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ“… Reservations" onAction="#goToReservations" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="ðŸ’° Payments" onAction="#goToPayments" maxWidth="Infinity"
                        style="-fx-background-color: #FFEDD8; -fx-text-fill: #588157; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT; -fx-font-weight: bold;"/>
                <Button text="ðŸ›Žï¸ Services" onAction="#goToServices" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
                <Button text="â„¹ï¸ About Us" onAction="#goToAbout" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFEDD8; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #F3EDDF; -fx-background: #F3EDDF;">
            <VBox spacing="25" style="-fx-padding: 30;">
                
                <!-- Header Section -->
                <VBox spacing="8">
                    <Label text="Payment Management" style="-fx-text-fill: #0f172a; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Record and track payments for reservations" style="-fx-text-fill: #64748b; -fx-font-size: 14px; "/>
                </VBox>

                <!-- Search and Filter Section -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Search by guest or ID..." prefWidth="350" onKeyReleased="#searchPayments" style="-fx-background-color: white; -fx-background-radius: 8px;"/>
                    <Button text="Search" onAction="#searchPayments" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8px;"/>
                    <Button text="Clear" onAction="#clearSearch" style="-fx-background-color: white; -fx-text-fill: #0f172a; -fx-padding: 8 20; -fx-background-radius: 8px; -fx-border-color: #e2e8f0;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="methodFilter" promptText="Payment Method" prefWidth="150" onAction="#applyFilters"/>
                    <ComboBox fx:id="statusFilter" promptText="Status" prefWidth="130" onAction="#applyFilters"/>
                    <Button text="Record Payment" onAction="#showAddPaymentForm" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8px; -fx-font-weight: bold;"/>
                    <Button text="ðŸ”„ Refresh" onAction="#refreshPayments" style="-fx-background-color: white; -fx-text-fill: #0f172a; -fx-padding: 8 20; -fx-background-radius: 8px; -fx-border-color: #e2e8f0;"/>
                </HBox>

                <!-- Statistics Cards -->
                <GridPane hgap="20" vgap="15">
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-border-color: #3b82f6; -fx-border-width: 0 0 0 4;">
                        <Label text="Total Payments" style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                        <Label fx:id="totalPaymentsLabel" text="0" style="-fx-text-fill: #3b82f6; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-border-color: #10b981; -fx-border-width: 0 0 0 4;">
                        <Label text="Completed" style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                        <Label fx:id="completedPaymentsLabel" text="0" style="-fx-text-fill: #10b981; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-border-color: #8b5cf6; -fx-border-width: 0 0 0 4;">
                        <Label text="Total Revenue" style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                        <Label fx:id="totalRevenueLabel" text="0.00" style="-fx-text-fill: #8b5cf6; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    </VBox>
                </GridPane>

                <!-- Payments Table -->
                <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                    <Label text="Transaction Records" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="paymentsTable" VBox.vgrow="ALWAYS" prefHeight="350">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="reservationIdColumn" text="Res. ID" prefWidth="80"/>
                            <TableColumn fx:id="guestNameColumn" text="Guest Name" prefWidth="180"/>
                            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                            <TableColumn fx:id="methodColumn" text="Method" prefWidth="120"/>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="transactionIdColumn" text="Transaction ID" prefWidth="150"/>
                        </columns>
                    </TableView>
                    
                    <HBox spacing="10">
                        <Button text="View Receipt" onAction="#viewReceipt" style="-fx-background-color: #3b82f6; -fx-text-fill: white;"/>
                        <Button text="Print Receipt" onAction="#printReceipt" style="-fx-background-color: #10b981; -fx-text-fill: white;"/>
                        <Button text="Refund Payment" onAction="#refundPayment" style="-fx-background-color: #ef4444; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <!-- Payment Form Panel (Hidden by default) -->
                <VBox fx:id="paymentFormPanel" spacing="20" managed="false" visible="false" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Record New Payment" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="25" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="180"/>
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <Label text="Reservation:" styleClass="form-label"/>
                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <ComboBox fx:id="reservationComboBox" promptText="Select reservation" onAction="#onReservationSelected"/>
                            <Label fx:id="reservationTotalLabel" text="Total: 0.00" minWidth="120" style="-fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
                        </HBox>
                        
                        <TextField fx:id="amountField" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Payment Method:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="methodComboBox" promptText="Select payment method" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Transaction ID:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="transactionIdField" promptText="Optional - for card/online payments" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <Label text="Status:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <ComboBox fx:id="paymentStatusComboBox" promptText="Select status" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        
                        <Label text="Notes:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextArea fx:id="notesArea" promptText="Additional notes" wrapText="true" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </GridPane>
                    
                    <HBox spacing="12" alignment="CENTER_RIGHT">
                        <Button text="Cancel" onAction="#cancelPaymentForm" style="-fx-background-color: white; -fx-border-color: #e2e8f0;"/>
                        <Button text="Record Payment" onAction="#savePayment" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
